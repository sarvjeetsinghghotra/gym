<mujoco model="sphere">
    <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
    
    <option density="4000" integrator="RK4" timestep="0.01" viscosity="0.1"/>
    
    <default>
        <geom conaffinity="1" condim="1" contype="1" margin="0.001" solimp=".8 .8 .01" solref="0.02 1" material="geom" />
        
    </default>
    
    <asset>
        <texture builtin="gradient" height="100" rgb1="1 1 1" rgb2="0 0 0" type="skybox" width="100"/>
        <texture builtin="flat" height="1278" mark="cross" markrgb="1 1 1" name="texgeom" random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>
        <texture builtin="checker" height="100" name="texplane" rgb1="0 0 0" rgb2="0.8 0.8 0.8" type="2d" width="100"/>
        <material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="30 30" texture="texplane"/>
        <material name="geom" texture="texgeom" texuniform="true"/>
    </asset>
    
    <worldbody>
        <light cutoff="100" diffuse="1 1 1" dir="-1 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
        <geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 -0.1" rgba="1 0.9 0.8 1" size="40 40 0.1" type="plane"/>
        
        <!--            Sphere              -->
        <body name="ball" pos="0 0 0.1">
            <geom friction= "2.0" conaffinity="1" contype="1" density="1000" type="sphere" size="0.2" rgba="1 1 1 1"/>
            <joint axis="1 0 0" name="x-rotor" pos="0 0 0.2" type="slide"/>
            <joint axis="0 1 0" name="y-rotor" pos="0 0 0.2" type="slide"/>
            
           
        </body>
        
        <body name="wall-up" pos="-12.8 0 0.3">
            <geom friction= "2.0" conaffinity="1" contype="1" density="1000" size="0.2 2.6 0.4" rgba="0.9 0.2 0.2 1" type="box"/>
        </body>
        <body name="wall-left" pos="-0.04 -12.8 0.3">
            <geom conaffinity="1" friction= "2.0" contype="1" density="1000" size="2.6 0.2 0.4" rgba="0.9 0.2 0.2 1" type="box"/>
        </body>
        <body name="wall-bottom" pos="12.8 0 0.3">
            <geom friction= "2.0" conaffinity="1" contype="1" density="1000" size="0.2 2.6 0.4" rgba="0.9 0.2 0.2 1" type="box"/>
        </body>
        <body name="wall-right" pos="-0.04 12.8 0.3">
            <geom conaffinity="1" friction= "2.0" contype="1" density="1000" size="10.6 0.2 0.4" rgba="0.9 0.2 0.2 1" type="box"/>
        </body>    
         
    </worldbody>
    <actuator>
        <motor ctrllimited="true" ctrlrange="-3 3" gear="1500.0" joint="x-rotor"/>
        <motor ctrllimited="true" ctrlrange="-3 3" gear="1500.0" joint="y-rotor"/>
    </actuator>
</mujoco>
